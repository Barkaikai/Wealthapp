# ============================================
# REQUIRED - Application Will Not Start Without These
# ============================================

# Database Configuration (Auto-configured on Replit)
DATABASE_URL=postgresql://user:password@host:5432/database
PGHOST=your-db-host.com
PGPORT=5432
PGUSER=your-db-user
PGPASSWORD=your-db-password
PGDATABASE=your-db-name

# Session Security (Required)
# Generate with: openssl rand -hex 32
SESSION_SECRET=your-session-secret-here

# Application Base URL (Required)
APP_BASE_URL=https://your-app-name.replit.app

# AI Services (Required for core features)
OPENAI_API_KEY=sk-your-openai-key-here

# ============================================
# SECURITY & AUTHENTICATION
# ============================================

# CSRF Protection (Highly recommended for production)
# Generate with: openssl rand -hex 32
CSRF_SECRET=your-csrf-secret-here

# Microsoft OAuth 2.0 (Office 365 Integration)
# Get from Azure App Registration: https://portal.azure.com
MS_CLIENT_ID=your-azure-app-client-id
MS_TENANT_ID=your-azure-tenant-id
MS_CLIENT_SECRET=your-azure-client-secret
MS_REDIRECT_URI=https://your-app-name.replit.app/auth/microsoft/callback
MS_GRAPH_SCOPES=user.read,mail.read,files.readwrite,calendars.readwrite,offline_access

# ============================================
# MULTI-AGENT AI & CACHING
# ============================================

# Redis (Required for Multi-Agent AI memory)
# Get from Upstash: https://upstash.com (free tier available)
REDIS_URL=rediss://default:password@host.upstash.io:6379

# Anthropic Claude (Optional - Multi-Agent AI provider)
ANTHROPIC_KEY=sk-ant-your-anthropic-key

# Cohere (Optional - Multi-Agent AI provider)
COHERE_KEY=your-cohere-api-key

# ============================================
# FINANCIAL DATA & SEARCH
# ============================================

# Tavily Search API (Required for web search)
# Get from: https://tavily.com
TAVILY_API_KEY=tvly-your-tavily-api-key

# Alpha Vantage (Stock prices)
# Get from: https://www.alphavantage.co
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key

# CoinGecko (Cryptocurrency prices - Optional)
# Get from: https://www.coingecko.com/en/api
COINGECKO_API_KEY=CG-your-coingecko-key

# ============================================
# PAYMENT & BANKING (Optional)
# ============================================

# Stripe (Payment processing)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key

# Plaid (Bank account aggregation)
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-secret

# ============================================
# WEB3 & NFT INFRASTRUCTURE
# ============================================

# Alchemy (EVM NFT indexing - Ethereum, Polygon)
# Get from: https://www.alchemy.com (free tier available)
ALCHEMY_API_KEY=your-alchemy-api-key
ETH_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your-key
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/your-key

# Moralis (Alternative EVM indexer - Optional)
MORALIS_API_KEY=your-moralis-api-key

# WalletConnect (Multi-chain wallet connection)
# Get from: https://cloud.walletconnect.com
WALLETCONNECT_PROJECT_ID=your-walletconnect-project-id

# Solana (NFT metadata and RPC)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
METAPLEX_RPC_URL=https://api.metaplex.solana.com # Optional for enhanced metadata

# Hedera (HTS NFT support)
# Get from: https://portal.hedera.com
HEDERA_MIRROR_NODE=https://mainnet-public.mirrornode.hedera.com/api/v1
HEDERA_OPERATOR_ID=0.0.xxxxx # Optional - only for custodial flows (not recommended)
HEDERA_OPERATOR_KEY=your-hedera-operator-key # Optional - only for custodial flows

# ============================================
# ENVIRONMENT CONFIGURATION
# ============================================

NODE_ENV=development
PORT=5000

# Replit-specific (Auto-configured on Replit)
REPLIT=1
REPL_SLUG=your-repl-name
REPL_OWNER=your-username
REPLIT_DOMAINS=your-app-name.replit.app

